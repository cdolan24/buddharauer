# LLM API Keys
ANTHROPIC_API_KEY=your_anthropic_key_here
OPENAI_API_KEY=your_openai_key_here
GOOGLE_API_KEY=your_google_key_here

# Vector Database Configuration
VECTOR_DB_TYPE=chromadb
VECTOR_DB_PATH=./vector_db

# Processing Configuration
CHUNK_SIZE=800
CHUNK_OVERLAP=150
MIN_CHUNK_SIZE=100
MAX_CHUNK_SIZE=1500

# Embedding Configuration
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIMENSIONS=1536
BATCH_SIZE=100

# LLM Configuration
LLM_PROVIDER=anthropic
LLM_MODEL=claude-sonnet-4-5
LLM_TEMPERATURE=0.7
MAX_TOKENS=4096

# Processing Options
ENABLE_ENTITY_EXTRACTION=true
PROCESSING_MODE=batch
PARALLEL_WORKERS=5

# Paths
DATA_DIR=./data
PROCESSED_DIR=./processed
TEXT_DIR=./processed/text
MARKDOWN_DIR=./processed/markdown
METADATA_DIR=./processed/metadata
IMAGES_DIR=./processed/images
ENTITY_DB_PATH=./processed/entities.json

# Database Paths
DATA_STORAGE_DIR=./data_storage
USER_DB_PATH=./data_storage/users.db
QUERY_LOG_DB_PATH=./data_storage/query_log.db
DOCUMENT_REGISTRY_DB_PATH=./data_storage/document_registry.db
AUDIT_LOG_PATH=./data_storage/audit_log.txt

# Image Processing
ENABLE_IMAGE_EXTRACTION=true
IMAGE_QUALITY=90
IMAGE_FORMAT=PNG
ENABLE_IMAGE_DESCRIPTION=true
IMAGE_DESCRIPTION_MODEL=gpt-4-vision

# OCR Settings
ENABLE_OCR=false
OCR_PROVIDER=pytesseract

# Authentication
SESSION_TIMEOUT=3600
JWT_SECRET_KEY=your_secret_key_here_change_in_production
PASSWORD_MIN_LENGTH=8

# Analytics
ENABLE_QUERY_LOGGING=true
ENABLE_METRICS=true
ANALYTICS_RETENTION_DAYS=90

# Logging
LOG_LEVEL=INFO
LOG_FILE=./buddharauer.log
AUDIT_LOG_ENABLED=true

# Performance
QUERY_TIMEOUT=30
API_RATE_LIMIT=100
CACHE_EMBEDDINGS=true

# CLI Settings
CLI_NAME=buddharauer
DEFAULT_VIEWER=auto
